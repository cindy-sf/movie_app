{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "$assets/*": [
        "src/assets/*"
      ],
      "$components/*": [
        "src/components/*"
      ],
      "$src/*": [
        "src/*"
      ],
      "$styles": [
        "src/styles/theme"
      ]
    }
  },
  "extends": "expo/tsconfig.base"
}
